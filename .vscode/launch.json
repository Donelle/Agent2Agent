{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Host Launch (Hot Reload)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                "${workspaceFolder}/Agent2Agent.AppHost/Agent2Agent.AppHost.csproj",
                "--verbose"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:17229;http://localhost:15220",
                "DOTNET_ENVIRONMENT": "Development",
                "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true",
                "ASPIRE_DASHBOARD_OTLP_ENDPOINT_URL": "https://localhost:21208",
                "ASPIRE_RESOURCE_SERVICE_ENDPOINT_URL": "https://localhost:22151"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Host Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Agent2Agent.AppHost/bin/Debug/net9.0/Agent2Agent.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Agent2Agent.AppHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:17229;http://localhost:15220",
                "DOTNET_ENVIRONMENT": "Development",
                "ASPIRE_ALLOW_UNSECURED_TRANSPORT": "true",
                "ASPIRE_DASHBOARD_OTLP_ENDPOINT_URL": "https://localhost:21208",
                "ASPIRE_RESOURCE_SERVICE_ENDPOINT_URL": "https://localhost:22151"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "DatasetCreator Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DatasetCreator/bin/Debug/net9.0/DatasetCreator.dll",
            "cwd": "${workspaceFolder}/DatasetCreator",
            "stopAtEntry": false,
            "console": "internalConsole",
            "args": [
                "--input",
                "/mnt/c/Tmp",
                "--verbose",
                "--clear-existing"
            ],
            "env": {
                "DOTNET_ENVIRONMENT": "Development",
            }
        }
    ]
}